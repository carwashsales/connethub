{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "avatar": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            },
            "hint": {
              "type": "string"
            }
          },
          "required": ["url", "hint"]
        },
        "bio": {
          "type": "string",
          "description": "A short biography of the user."
        }
      },
      "required": ["uid", "name", "email", "avatar"]
    },
    "Product": {
      "title": "Product",
      "description": "An item for sale in the marketplace.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "sellerId": {
          "type": "string"
        },
        "image": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            },
            "hint": {
              "type": "string"
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["name", "description", "price", "sellerId", "image", "createdAt"]
    },
    "LostAndFoundItem": {
      "title": "Lost and Found Item",
      "description": "An item that has been reported as lost or found.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["lost", "found"]
        },
        "location": {
          "type": "string"
        },
        "contact": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "image": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            },
            "hint": {
              "type": "string"
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["name", "description", "type", "location", "contact", "userId", "image", "createdAt"]
    },
    "Post": {
      "title": "Post",
      "description": "A post in the news feed.",
      "type": "object",
      "properties": {
        "authorId": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "image": {
           "type": "object",
          "properties": {
            "url": {
              "type": "string"
            },
            "hint": {
              "type": "string"
            }
          }
        },
        "likes": {
          "type": "number"
        },
        "comments": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["authorId", "content", "likes", "comments", "createdAt"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public information for each user."
    },
    "/products/{productId}": {
      "schema": {
        "$ref": "#/entities/Product"
      },
      "description": "Contains all the items listed for sale in the marketplace."
    },
    "/lostAndFoundItems/{itemId}": {
        "schema": {
            "$ref": "#/entities/LostAndFoundItem"
        },
        "description": "Contains all the lost and found items."
    },
    "/posts/{postId}": {
      "schema": {
        "$ref": "#/entities/Post"
      },
      "description": "Contains all the posts for the news feed."
    }
  }
}
